{
  "dataform-version": "1.0.0",
  "type": "gridpanel",
  "showLabels": true,
  "children": [
    {
      "type": "textbox",
      "field": "chartOptions.title",
      "title": "${chartOptions.title}",
      "tooltip": "${chartOptions.title}",
      "required": true
    },
    {
      "type": "numberspinner",
      "min": 1,
      "field": "chartOptions.chartTitleFontSize",
      "title": "${chartOptions.chartTitleFontSize}",
      "tooltip": "${chartOptions.chartTitleFontSize}",
      "required": true
    },
    {
      "type": "numberspinner",
      "min": 1,
      "field": "chartOptions.axisTitleFontSize",
      "title": "${chartOptions.axisTitleFontSize}",
      "tooltip": "${chartOptions.axisTitleFontSize}",
      "required": true
    },
    {
      "type": "numberspinner",
      "min": 1,
      "field": "chartOptions.axisLabelFontSize",
      "title": "${chartOptions.axisLabelFontSize}",
      "tooltip": "${chartOptions.axisLabelFontSize}",
      "required": true
    },
    {
      "type": "selectbox",
      "field": "unit",
      "label": "${unit}",
      "searchAttribute": "name",
      "labelAttribute": "${name}",
      "values": [
        {
          "name": "${miles}",
          "value": "esriMiles"
        },
        {
          "name": "${kilometers}",
          "value": "esriKilometers"
        },
        {
          "name": "${meters}",
          "value": "esriMeters"
        },
        {
          "name": "${nauticalmiles}",
          "value": "esriNauticalMiles"
        },
        {
          "name": "${yards}",
          "value": "esriYards"
        },
        {
          "name": "${feet}",
          "value": "esriFeet"
        }
      ],
      "max": 2,
      "size": {
        "w": 100
      }
    }
  ]
}